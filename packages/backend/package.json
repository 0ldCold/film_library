{
  "name": "film_library_backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "yarn run build:routes && npx vite-node src/app.ts",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "build:routes": "tsoa spec-and-routes",
    "build:app": "yarn run build:routes && vite build",
    "build:run": "node build/src/app.js",
    "build:start": "yarn run build:app && yarn run build:run",
    "typeorm": "typeorm-ts-node-esm -d ./src/database/data-source",
    "types": "tsc --noEmit",
    "check": "yarn run types",
    "db:create": "npx vite-node src/database/actions/dbCreate.ts",
    "db:drop": "npx vite-node src/database/actions/dbDrop.ts",
    "db:fresh": "yarn run db:drop && yarn run db:create",
    "seed:run": "npx vite-node src/database/actions/runSeeder.ts",
    "seed:fresh": "yarn run db:fresh && yarn run seed:run"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-swc": "^0.3.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc/core": "^1.4.13",
    "@types/express": "^4",
    "@types/node": "^20.12.7",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0",
    "rollup": "^4.14.2",
    "ts-node": "^10.9.2",
    "typeorm-extension": "^3.5.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vite-node": "^1.5.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "packageManager": "yarn@4.1.1",
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "dist",
      "build"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
